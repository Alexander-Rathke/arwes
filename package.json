{
  "scripts": {
    "postinstall": "npm run bootstrap && npm run compile",
    "bootstrap": "lerna bootstrap",
    "lerna": "lerna",
    "playground": "webpack-dev-server --config ./playground/playground.config.js",
    "lint": "eslint ./packages/*/src",
    "lint-fix": "eslint --fix ./packages/*/src",
    "test": "jest",
    "test-dev": "jest --watch",
    "test-cov": "jest --coverage",
    "test-list": "jest --listTests",
    "test-ci": "npm run bootstrap && npm run compile && npm run lint && npm test",
    "compile": "sh compile.sh",
    "release": "npm run test-ci && lerna publish",
    "changelog": "auto-changelog --output CHANGELOG.md --commit-limit false",
    "contributors-add": "all-contributors add",
    "contributors-generate": "all-contributors generate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test-ci"
    }
  },
  "dependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-export-default-from": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@babel/runtime": "^7.10.3",
    "@testing-library/react": "^8.0.9",
    "all-contributors-cli": "^6.16.0",
    "animejs": "^3.2.0",
    "auto-changelog": "^1.16.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "documentation": "^9.3.1",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.1",
    "glob": "^7.1.6",
    "howler": "^2.2.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.22.1",
    "navigo": "^7.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-jss": "^10.3.0",
    "redux": "^4.0.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
