{
  "scripts": {
    "postinstall": "npm run bootstrap && npm run compile",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "playground": "webpack-dev-server --config playground.config.js",
    "lint": "eslint ./packages/*/src",
    "test": "jest",
    "test-dev": "jest --watch",
    "test-cov": "jest --coverage",
    "test-list": "jest --listTests",
    "test-ci": "npm run bootstrap && npm run compile && npm run lint && npm test",
    "compile": "sh compile.sh",
    "release": "npm run test-ci && lerna publish",
    "changelog": "auto-changelog --output CHANGELOG.md --commit-limit false",
    "contributors-add": "all-contributors add",
    "contributors-generate": "all-contributors generate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test-ci"
    }
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.2",
    "all-contributors-cli": "^6.3.1",
    "auto-changelog": "^1.12.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^8.0.5",
    "documentation": "^9.3.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "glob": "^7.1.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.13.3",
    "navigo": "^7.1.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-jss": "^8.6.1",
    "react-redux": "^7.0.2",
    "redux": "^4.0.1",
    "sinon": "^7.3.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  }
}
