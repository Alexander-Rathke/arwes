{
  "extends": [
    "standard",
    "standard-react"
  ],

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },

  "env": {
    "es6": true
  },

  "rules": {
    "semi": ["error", "always"],
    "brace-style": ["error", "stroustrup"],
    "prefer-promise-reject-errors": [0]
  }
}
